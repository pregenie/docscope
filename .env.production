# Production Environment Configuration
# Copy this file to .env and update with your production values

# Application
DOCSCOPE_ENV=production
DOCSCOPE_DEBUG=false
DOCSCOPE_SECRET_KEY=change-this-to-a-secure-random-string
DOCSCOPE_LOG_LEVEL=INFO

# Database
DOCSCOPE_DATABASE_URL=postgresql://docscope:password@localhost:5432/docscope
DOCSCOPE_DB_POOL_SIZE=20
DOCSCOPE_DB_MAX_OVERFLOW=40

# Redis
DOCSCOPE_REDIS_URL=redis://localhost:6379/0
DOCSCOPE_REDIS_MAX_CONNECTIONS=50

# Search
DOCSCOPE_SEARCH_INDEX_PATH=/data/index
DOCSCOPE_SEARCH_BATCH_SIZE=100

# Storage
DOCSCOPE_DATA_DIR=/data/documents
DOCSCOPE_TEMP_DIR=/tmp/docscope
DOCSCOPE_MAX_FILE_SIZE=52428800

# Security
DOCSCOPE_CORS_ORIGINS=https://docscope.example.com
DOCSCOPE_ENABLE_AUTH=true
DOCSCOPE_JWT_SECRET=change-this-jwt-secret
DOCSCOPE_JWT_ALGORITHM=HS256
DOCSCOPE_JWT_EXPIRY=3600

# Rate Limiting
DOCSCOPE_ENABLE_RATE_LIMIT=true
DOCSCOPE_RATE_LIMIT=100
DOCSCOPE_RATE_LIMIT_PERIOD=60

# Monitoring
DOCSCOPE_ENABLE_METRICS=true
DOCSCOPE_METRICS_PORT=9090
DOCSCOPE_ENABLE_HEALTH_CHECK=true

# External Services
DOCSCOPE_SENTRY_DSN=
DOCSCOPE_SLACK_WEBHOOK_URL=
DOCSCOPE_SMTP_HOST=
DOCSCOPE_SMTP_PORT=587
DOCSCOPE_SMTP_USER=
DOCSCOPE_SMTP_PASSWORD=

# Features
DOCSCOPE_ENABLE_PLUGINS=true
DOCSCOPE_ENABLE_EXPORT=true
DOCSCOPE_ENABLE_WATCH=true
DOCSCOPE_ENABLE_WEBHOOKS=true